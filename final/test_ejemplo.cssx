@color_primario = #3498db
@espaciado = 20px

.contenedor {
    fondo = @color_primario
    relleno = @espaciado
    redondeado = 8px
    color = blanco
}

titulo1 {
    texto = "Mi Página Web"
    tamano = 24px
    peso = bold
}

.tarjeta {
    fondo = blanco
    relleno = 25px
    margen = @espaciado 0
    redondeado = 5px
    sombra = 0 4px 15px rgba(0,0,0,0.1)

    titulo2 {
        texto = "Bienvenido"
        color = @color_primario
        tamano = 20px
    }

    parrafo {
        texto = "Este es un ejemplo de CSSX en español."
        color = #666
        interlineado = 1.5
    }
}